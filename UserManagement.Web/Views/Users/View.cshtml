@model UserManagement.Web.Models.Users.UserViewModel

<h2>View</h2>
<h3>Current user details:</h3>

<div>
    <div>
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Forename)</dt>
            <dd class="col-sm-10">@Model.Forename</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Surname)</dt>
            <dd class="col-sm-10">@Model.Surname</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
            <dd class="col-sm-10">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IsActive)</dt>
            <dd class="col-sm-10">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="bi bi-clock-history"></i> Activity Log
        </h5>
        <span class="badge bg-primary">@Model.UserActivityLogs.Count entries</span>
    </div>
    <div class="card-body p-0">
        @if (!Model.UserActivityLogs.Any())
        {
            <div class="alert alert-info m-3" role="alert">
                <i class="bi bi-info-circle"></i> No activity logs found for this user.
            </div>
        }
        else
        {
            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                <table class="table table-hover table-sm mb-0">
                    <thead class="table-light sticky-top">
                    <tr>
                        <th scope="col" style="width: 200px;">Date & Time</th>
                        <th scope="col" style="width: 120px;">Action</th>
                        <th scope="col">Details</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var log in Model.UserActivityLogs)
                    {
                        <tr>
                            <td>
                                <small class="text-muted">
                                    @log.TimeStamp.ToString("dd/MM/yyyy HH:mm:ss")
                                </small>
                            </td>
                            <td>
                                <span class="badge @GetActionBadgeClass(log.Action)">
                                    @log.Action
                                </span>
                            </td>
                            <td>
                                <small>@log.Details</small>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (Model.UserActivityLogs.Any())
    {
        <div class="card-footer bg-light text-muted small">
            <i class="bi bi-info-circle"></i>
            Showing all @Model.UserActivityLogs.Count activity log entries for this user
        </div>
    }
</div>

@functions {
    string GetActionBadgeClass(string action)
    {
        return action switch
        {
            "CREATE" => "bg-success",
            "UPDATE" => "bg-warning text-dark",
            "DELETE" => "bg-danger",
            "VIEW" => "bg-info",
            _ => "bg-secondary"
        };
    }
}
