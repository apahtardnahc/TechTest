@model UserManagement.Web.Models.Users.UserViewModel

<h2>Delete</h2>
<h3>Deleting a user</h3>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <h5>This action is irreversible and cannot be undone</h5>
</div>

<div>
    <div>
        <div>
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
                <dd class="col-sm-10">@Model.Id</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Forename)</dt>
                <dd class="col-sm-10">@Model.Forename</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Surname)</dt>
                <dd class="col-sm-10">@Model.Surname</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
                <dd class="col-sm-10">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IsActive)</dt>
                <dd class="col-sm-10">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>

<form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</form>
